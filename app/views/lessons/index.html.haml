= stylesheet_link_tag "lessons"
.page-header
  %h1= t('.schedule')
- @genres.each do |genre|
  -#FIXME
  - if genre.groups.any? or session[:admin_id]
    = genre.title
    -#FIXME
    - if session[:admin_id]
      = link_to t('.add_group'), new_group_path, :class => 'btn btn-primary'
      %br
      %br
    %table.table.talbe-striped.table-bordered.table-aligned
      %tr
        %td= t('.group')
        %td= t('.monday')
        %td= t('.tuesday')
        %td= t('.wednesday')
        %td= t('.thursday')
        %td= t('.friday')
        %td= t('.saturday')
        %td= t('.sunday')
        -#FIXME
        - if session[:admin_id]
          %td= t('.actions')
      - genre.groups.decorate.each do |group|
        %tr
          -#FIXME
          - if group.lessons.any? or session[:admin_id]
            %td
              = group.category.describe
            - @days.each do |day|
              %td
                = group.lesson_time(day)
                -#FIXME
                - if group.find_lesson_by_day(day) and session[:admin_id]
                  %br
                  = link_to t('.edit', :default => t("helpers.links.edit")), edit_lesson_path(group.find_lesson_by_day(day)), :class => 'btn btn-mini'
                  = link_to t('.destroy', :default => t("helpers.links.destroy")), lesson_path(group.find_lesson_by_day(day)), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
          - if session[:admin_id]
            %td
              = link_to t('.new', :default => t("helpers.links.new")), "lessons/new/#{group.id}", :class => 'btn btn-primary'
