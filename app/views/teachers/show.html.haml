- model_class = Teacher
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:fio) + ':'
  %br
  = @teacher.fio
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @teacher.description
%p
  %strong= model_class.human_attribute_name(:motto) + ':'
  %br
  = @teacher.motto

%p
  -@teacher.teacher_photos.each do |photo|
    %img{ :src => photo }
  =link_to t('.upload_photo'), "#{@teacher.id}/teacher_photos/new"

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), teachers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_teacher_path(@teacher), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), teacher_path(@teacher), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
