- model_class = Lesson
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:time) + ':'
  %br
  = @lesson.time
%p
  %strong= model_class.human_attribute_name(:day) + ':'
  %br
  = @lesson.day
%p
  %strong= model_class.human_attribute_name(:group_id) + ':'
  %br
  = @lesson.group_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), lessons_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_lesson_path(@lesson), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), lesson_path(@lesson), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
