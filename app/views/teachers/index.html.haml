- model_class = Teacher
.page-header
  %h1=t '.title'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:photo)
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:middle_name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:motto)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @teachers.each do |teacher|
      %tr
        %th
        - unless teacher.photos.blank?
          %img{ :src => teacher.photos.first.photo }
        %td= link_to teacher.id, teacher_path(teacher)
        %td= teacher.first_name
        %td= teacher.middle_name
        %td= teacher.description
        %td= teacher.motto
        %td= l teacher.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_teacher_path(teacher), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), teacher_path(teacher), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new_teacher'), new_teacher_path, :class => 'btn btn-primary'
