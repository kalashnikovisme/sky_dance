- model_class = Teacher
.page-header
  %h1=t '.title'

%p
  %strong= :fio
  %br
  = @teacher.fio
%p
  %strong= :description
  %br
  = @teacher.description
%p
  %strong= :motto
  %br
  = @teacher.motto

%p
  -@teacher.teacher_photos.each do |photo|
    %img{ :src => photo }
  =link_to t('.upload_photo'), "#{@teacher.id}/teacher_photos/new"

.form-actions
  = link_to t('.back'), teachers_path, :class => 'btn'
  = link_to t('.edit'), edit_teacher_path(@teacher), :class => 'btn'
  = link_to t('.destroy'), teacher_path(@teacher), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
