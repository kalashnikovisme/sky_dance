= simple_form_for @group, :html => { :class => 'form-horizontal' } do |f|
  - f.with_options :input_html => { :class => :span6 } do |f|
    = f.input :once_price
    = f.input :price
    = f.input :genre_id
    = f.input :teacher_id
    = f.input :category_id
    .form-actions
      = f.button :submit, :class => 'btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), groups_path, :class => 'btn'
