= simple_form_for @lesson, :html => { :class => 'form-horizontal' } do |f|
  = f.input :time
  = f.input :day
  = f.association :group, as: :select, label_method: :id, value_method: :id
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), lessons_path, :class => 'btn'
