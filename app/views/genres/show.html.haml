.page-header
  %h1= @genre.title
.row-fluid
  .span9
    .row-fluid
      %p{ align: "justify" }
        = @genre.description
    .row-fluid
      - @genre.videos.each do |video|
        .float-left
          = video.decorate.from_youtube
        %br
    .row-fluid
      -#FIXME
      - if session[:admin_id]
        .form-actions
          %small= t '.admins_buttons'
          %br
          = link_to t('.admins_video'), admins_videos_url(@genre), class: 'btn btn-warning'
          = link_to t('edit'), edit_genre_path(@genre), class: 'btn'
          = link_to t('destroy'), genre_path(@genre), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
    = link_to t('back'), teachers_path, class: 'btn'
  .span3
    .row-fluid
      %img{ src: @genre.photo }

.row-fluid
  #vk_comments
  :javascript
    VK.Widgets.Comments("vk_comments", {limit: 10, width: "496", attach: "*"});
