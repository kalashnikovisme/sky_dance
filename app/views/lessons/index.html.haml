= stylesheet_link_tag "lessons"

- model_class = Lesson
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:time)
      %th= model_class.human_attribute_name(:day)
      %th= model_class.human_attribute_name(:group_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @lessons.each do |lesson|
      %tr
        %td= link_to lesson.id, lesson_path(lesson)
        %td= lesson.time
        %td= lesson.day
        %td= lesson.group_id
        %td=l lesson.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_lesson_path(lesson), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), lesson_path(lesson), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_lesson_path, :class => 'btn btn-primary'

.page-header
  %h1= t('.schedule')
- @genres.each do |genre|
  = genre.title
  %table.table.talbe-striped.table-bordered.table-aligned
    -#FIXME
    - genre.groups.decorate.each do |group|
      %tr
        %td
          = group.category.describe
        - @days.each do |day|
          %td
            = group.lesson_time(day)
            - if group.find_lesson_by_day(day)
              %br
              = link_to t('.edit', :default => t("helpers.links.edit")), edit_lesson_path(group.find_lesson_by_day(day)), :class => 'btn btn-mini'
              = link_to t('.destroy', :default => t("helpers.links.destroy")), lesson_path(group.find_lesson_by_day(day)), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
        %td
          = link_to t('.new', :default => t("helpers.links.new")), new_lesson_path, :class => 'btn btn-primary'
