= stylesheet_link_tag "genres", :media => "all"

= simple_form_for @genre, :html => { :class => 'form-horizontal' } do |f|
  - f.with_options :input_html => { :class => :span6 } do |f|
    .field
      = f.input :title
      = f.input :description
      = f.file_field :photo
      .form-actions
        = f.button :submit, :class => 'btn-primary'
        = link_to t('.cancel'), teachers_path, :class => 'btn'
