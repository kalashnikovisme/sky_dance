= stylesheet_link_tag "genres", :media => "all"

= simple_form_for @genre, :html => { :class => 'form-horizontal' } do |f|
  - f.with_options :input_html => { :class => :span6 } do |f|
    .field
      = f.input :title
      = f.input :description
      %br
      - if @genre && @genre.photo
        = image_tag @genre.photo.thumb, :class => 'img-polaroid'
        %br
        %br
        %b
          = t('.choose_new_photo')
        %br
      = f.file_field :photo
      .form-actions
        = f.button :submit, t('.save_genre'),  :class => 'btn btn-primary'
        = link_to t('.cancel'), genres_path, :class => 'btn'
