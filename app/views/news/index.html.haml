= stylesheet_link_tag "news"

.page-header
  %h1=t '.title'
%table.table.table-striped
  - @news.each do |news|
    %tr
      %td
        = image_tag news.main_photo_thumb
        .micro-text-with-photo
          %big= news.title
          %small= news.published_at
      %td= news.lead
    #FIXME
      - if session[:admin_id]
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_news_path(news), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), news_path(news), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
- if session[:admin_id]
  = link_to t('.new', :default => t("helpers.links.new")), new_news_path, :class => 'btn btn-primary'
