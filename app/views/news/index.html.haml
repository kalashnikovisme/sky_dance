= stylesheet_link_tag "news"

.page-header
  %h1=t '.title'
%ul.thumbnails
  - @news.each do |news|
    %li.span3.news_cell
      .thumbnail
        %a{ :href => news_path(news) }
          = image_tag news.main_photo_big_thumb
        %h3= news.title
        %p= news.lead
        %a.btn.btn-medium{ :href => news_path(news) }= t('.cut')

        -#FIXME
        - if session[:admin_id]
          = link_to t('.edit', :default => t('helpers.links.edit')), edit_news_path(news), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), news, :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
-#FIXME
- if session[:admin_id]
  = link_to t('.new_teacher'), new_news_path, :class => 'btn btn-primary'
