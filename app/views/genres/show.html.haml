- model_class = Genre
.page-header
  %h1= @genre.title
%p
  %img{ :src => @genre.photo }
%p
  = @genre.description
%p
  - @genre.videos.each do |video|
    %iframe {:allowscriptaccess => "always", :allowFullScreen => "true", :frameborder => "0", :height => "135", :src => "http://www.youtube.com/embed/#{video.link}", :title => "YouTube video player", :width => "240"}
%br
  -#FIXME
  - if session[:admin_id]
    .form-actions
      = link_to t('.edit'), edit_genre_path(@genre), :class => 'btn'
      = link_to t('.destroy'), genre_path(@genre), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
  = link_to t('.back'), genres_path, :class => 'btn'
