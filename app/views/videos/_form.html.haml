= stylesheet_link_tag "videos"

-#FIXME
- if session[:viewed_genre_id]
  %h3= t('.adding_video_to_genre')
  %h3= Genre.find(session[:viewed_genre_id]).title
  = simple_form_for @video, :html => { :class => 'form-horizontal' } do |f|
    - f.with_options :input_html => { :class => :span6 } do |f|
      = f.input :link
      .form-actions
        = f.button :submit, t('.add_video'), :class => 'btn btn-primary'
        = link_to t('.cancel'), genre_path(Genre.find(session[:viewed_genre_id])), :class => 'btn'
  - @videos.each do |video|
    .video.margin-bottom
      = video.from_youtube
      %br
      = link_to t('.destroy'), video, :method => :delete, :data => { :confirm => t('.confirm') }, :class => 'btn btn-danger margin-bottom'
-else

  -#= render 'errors/not_found'
