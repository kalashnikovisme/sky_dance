= stylesheet_link_tag "teachers", :media => "all"

= simple_form_for @teacher, :html => { :class => 'form-horizontal' } do |f|
  - f.with_options :input_html => { :class => :span6 } do |f|
    .field
      = f.input :first_name
      = f.input :middle_name
      = f.label :description
      = f.text_area :description, :class => :span6, :row => 5, :placeholder => t('.teacher_description')
      = f.input :motto, :placeholder => t('.not_more_than_140_symbols')
      %small= t('.required_fields')
      .form-actions
        = f.button :submit, t('.add_teacher'), :class => 'btn btn-primary'
        = link_to t('.cancel'), teachers_path, :class => 'btn'
